// Prisma schema for workload-management

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?

  displayName   String?
  displayNameEn String?
  unitId        String?
  unit          Unit?    @relation(fields: [unitId], references: [id])
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts    Account[]
  sessions    Session[]
  holidays    HolidayPersonal[]
  timeEntries TimeEntry[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AdminEmail {
  email     String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AllowedDomain {
  domain    String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Unit {
  id         String   @id @default(cuid())
  name       String
  sortOrder  Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  users        User[]
  unitProjects UnitProject[]
}

model Project {
  id         String   @id @default(cuid())
  name       String
  sortOrder  Int      @default(0)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  items        ProjectItem[]
  unitProjects UnitProject[]
}

model ProjectItem {
  id        String   @id @default(cuid())
  projectId String
  name      String
  type      String?
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  timeEntries TimeEntry[]
}

model UnitProject {
  unitId    String
  projectId String

  unit    Unit    @relation(fields: [unitId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@id([unitId, projectId])
}

model TimeEntry {
  id            String   @id @default(cuid())
  userId        String
  date          DateTime
  projectItemId String
  value         Decimal  @db.Decimal(5, 1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectItem ProjectItem @relation(fields: [projectItemId], references: [id], onDelete: Cascade)

  @@unique([userId, date, projectItemId])
  @@index([date])
}

model HolidayCompany {
  id        String   @id @default(cuid())
  date      DateTime @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HolidayPersonal {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model Setting {
  key       String   @id
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
